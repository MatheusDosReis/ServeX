extends index.pug

block content
	if error
		each err in error
			.alert.alert-danger(role='alert').w-100
				= err
				button.close(type='button' data-dismiss='alert' aria-label='Fechar')
					span(aria-hidden='true') ×

	form(action='/user/register' name=uniqueFormKey method='POST' enctype='multipart/form-data').card-group.w-100
		.card.card-body
			h1.card-title Cadastrar
			h3.card-title Informações pessoais 			
			
			.form-group
				label(for='fullname') Nome completo
				input.form-control(required type='text' name='fullname')#fullname

			.row
				.col-sm-7
					.form-group
						label(for='email') E-mail
						input.form-control(required type='email' name='email')#email
				.col-sm-5
					.form-group
						label(for='cpf') CPF
						input.form-control(required type='text' name='CPF')#cpf
			
			.form-group
						label(for='userImg') Foto de Perfil
						input.form-control(type='file' name='photoPath')

			.form-group
				label(for='password') Senha
				input.form-control(required type='password' name='password' aria-describedby='passwd-help')#password
				small.form-text.text-muted#passwd-help Deve conter pelo menos 6 caracteres.
			.form-group
				label(for='confirmPassword') Repita a senha
				input.form-control(required type='password' name='confirmPassword')#confirmPassword

		.card.card-body
			h3.card-title Endereço
			
			.row
				.col-sm-7
					.form-group
						label(for='country') País
						input.form-control(required type='text' name='country')#country
				.col-sm-5
					.form-group
						label(for='province') UF
						select.form-control(required name='province')#province
							each province in provinces
								option(value=province.value) #{province.name}
			.row
				.col-sm-5
					.form-group
						label(for='city') Cidade
						input.form-control(required type='text' name='city')#city
				.col-sm-3
					.form-group
						label(for='ZIPCode') CEP
						input.form-control(required type='text' name='ZIPCode')#ZIPCode
				.col-sm-4
					.form-group
						label(for='neighborhood') Bairro
						input.form-control(required type='text' name='neighborhood')#neighborhood
			.row
				.col.sm-7
					.form-group
							label(for='street') Rua
							input.form-control(required type='text' name='street')#street
				.col-sm-5
					.form-group
							label(for='number') Número
							input.form-control(required type='text' name='number')#number
			h3 Cartão de Crédito

			.form-group
						label Número do Cartão
						input.form-control(type='text' name='cardNumber')
			.row
				.col-sm-7
					label Validade
					input.form-control(type='text' name='validUntil')
				.col-sm-5
					label CVC
					input.form-control(type='text' name='CVC')
			.form-group
				button.btn.btn-primary(type='submit' style='margin-top: 16px; padding-bottom: 5px') Cadastrar