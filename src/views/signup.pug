extends index.pug

block content
	form(name='registration' method='POST').card-group.w-100
		.card.card-body
			h1.card-title Cadastrar
			h2.card-title Informações pessoais
			div.form-group
				label(for='fullname') Nome completo
				input.form-control(required class=(errors.fullName && 'is-invalid') type='text' name='fullName')#fullname
				div.invalid-feedback= errors.fullName
			div.form-group
				label(for='email') E-mail
				input.form-control(required class=(errors.email && 'is-invalid') type='email' name='email')#email
				div.invalid-feedback= errors.email
			div.form-group
				label(for='cpf') CPF
				input.form-control(required class=(errors.CPF && 'is-invalid') type='text' name='CPF')#cpf
				div.invalid-feedback= errors.CPF
			div.form-group
				label(for='password') Senha
				input.form-control(required class=(errors.password && 'is-invalid') type='password' name='password' aria-describedby='passwd-help')#password
				div.invalid-feedback= errors.password
				small.form-text.text-muted#passwd-help Deve conter pelo menos 6 caracteres.
			div.form-group
				label(for='confirmPassword') Repita a senha
				input.form-control(required class=(errors.confirmPassword && 'is-invalid') type='password' name='confirmPassword')#confirmPassword
				div.invalid-feedback= errors.confirmPassword
		.card.card-body
			h2.card-title Endereço
			div.form-group
				label(for='country') País
				input.form-control(required class=(errors.country && 'is-invalid') type='text' name='country')#country
				div.invalid-feedback= errors.country
			div.form-group
				label(for='province') Estado
				input.form-control(required class=(errors.province && 'is-invalid') type='text' name='province')#province
				div.invalid-feedback= errors.province
			div.form-group
				label(for='ZIPCode') CEP
				input.form-control(required class=(errors.ZIPCode && 'is-invalid') type='text' name='ZIPCode')#ZIPCode
				div.invalid-feedback= errors.ZIPCode
			div.form-group
				label(for='city') Cidade
				input.form-control(required class=(errors.city && 'is-invalid') type='text' name='city')#city
				div.invalid-feedback= errors.city
			div.form-group
				label(for='neighborhood') Bairro
				input.form-control(required class=(errors.neighborhood && 'is-invalid') type='text' name='neighborhood')#neighborhood
				div.invalid-feedback= errors.neighborhood
			div.form-group
				label(for='street') Rua
				input.form-control(required class=(errors.street && 'is-invalid') type='text' name='street')#street
				div.invalid-feedback= errors.street
			div.form-group
				label(for='number') Número
				input.form-control(required class=(errors.number && 'is-invalid') type='text' name='number')#number
				div.invalid-feedback= errors.number
			div.form-group
				button.btn.btn-primary(type='submit') Cadastrar
		
block append scripts
	script(type='text/javascript' src='https://unpkg.com/inputmask@3.3.10/dist/min/jquery.inputmask.bundle.min.js')
	script(type='text/javascript').
		$(document).ready(() => {
			$('#cpf').inputmask({ mask: '999.999.999-99', removeMaskOnSubmit: true })
			$('#ZIPCode').inputmask({ mask: '99999-999', removeMaskOnSubmit: true })
		})
