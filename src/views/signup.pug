extends index.pug

block content
	.card-group.w-100
		form(method='POST').card.card-body
			h1.card-title Cadastrar
			h2.card-title Informações pessoais
			div.form-group
				label(for='fullname') Nome completo
				input.form-control(required type='text' name='fullName')#fullname
			div.form-group
				label(for='email') E-mail
				input.form-control(required type='email' name='email')#email
			div.form-group
				label(for='cpf') CPF
				input.form-control(required type='text' name='CPF')#cpf
			div.form-group
				label(for='password') Senha
				input.form-control(required type='password' name='password')#password
			div.form-group
				label(for='password') Repita a senha
				input.form-control(required type='password' name='confirm')#password
		.card.card-body
			h2.card-title Endereço
			div.form-group
				label(for='country') País
				input.form-control(required type='text' name='country')#country
			div.form-group
				label(for='province') Estado
				input.form-control(required type='text' name='province')#province
			div.form-group
				label(for='ZIPCode') CEP
				input.form-control(required type='text' name='ZIPCode')#ZIPCode
			div.form-group
				label(for='city') Cidade
				input.form-control(required type='text' name='city')#city
			div.form-group
				label(for='neighborhood') Bairro
				input.form-control(required type='text' name='neighborhood')#neighborhood
			div.form-group
				label(for='street') Rua
				input.form-control(required type='text' name='street')#street
			div.form-group
				button.btn.btn-primary(type='submit') Cadastrar
		
block append scripts
	script(type='text/javascript' src='https://code.jquery.com/jquery-3.2.1.min.js')
	script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.12/jquery.mask.min.js')
	script(type='text/javascript').
		$(document).ready(() => {
			$('#cpf').mask('000.000.000-00')
			$('#ZIPCode').mask('00000-000')
		})
