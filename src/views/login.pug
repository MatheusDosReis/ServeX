extends index.pug

block content
	if message
		.alert.alert-danger(role="alert").w-100
			= message
			button.close(type="button" data-dismiss="alert" aria-label="Close")
				span(aria-hidden="true") Ã—
	
	.row.w-100
		.col-sm-3
		.col-lg-6
			form(action='/user/login' name=uniqueFormKey method='POST').card-group
				.card.card-body
					h1.card-title Entrar
					.form-group
						label(for='email') E-mail
						input.form-control(required type='email' name='email')#email
					.form-group
						label(for='password') Senha
						input.form-control(required type='password' name='password')#password
					.form-group
						button.btn.btn-primary(type='submit') Entrar
		.col-sm-3
